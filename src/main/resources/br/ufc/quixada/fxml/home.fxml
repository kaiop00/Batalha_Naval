<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>

<StackPane xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="br.ufc.quixada.controller.HomeController"
           fx:id="rootPane"
           stylesheets="@../css/global.css">

    <ImageView fx:id="backgroundImage" fitWidth="${rootPane.width}" fitHeight="${rootPane.height}">
      <image>
        <!-- <Image url="@../images/wallpaper.jpg"/> -->
        <Image url="@../images/wallpaper.jpg"/>
      </image>
    </ImageView>
    <ImageView fx:id="image" disable="false" fitHeight="60" fitWidth="60" pickOnBounds="true" preserveRatio="true" />

    <VBox alignment="CENTER" spacing="20" maxWidth="300">
        <Button fx:id="buttonStartSinglePlayer" text="Iniciar Jogo Single Player" 
                styleClass="menu-button"/>
        <Button fx:id="buttonStartMultiPlayer" text="Iniciar Jogo Multi Player" 
                styleClass="menu-button"/>
        <Button fx:id="buttonShowHistory" text="Ver HistÃ³rico" 
                styleClass="menu-button"/>
    </VBox>

    <Button fx:id="buttonExit" text="Sair" 
            styleClass="exit-button"
            StackPane.alignment="BOTTOM_RIGHT">
        <StackPane.margin>
            <Insets bottom="20" right="20"/>
        </StackPane.margin>
    </Button>

</StackPane>